<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjektTales.EquationUsePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="EquationUsePage">
    <VerticalStackLayout>
        <Label FontSize="Medium" Text="Obliczenia Matematyczne" />

        <Label HorizontalTextAlignment="Center" Text="Podaj a1" />
        <Entry
            x:Name="a1"
            Keyboard="Numeric"
            TextChanged="Reset_Result" />

        <Label HorizontalTextAlignment="Center" Text="Podaj r" />
        <Entry
            x:Name="r"
            Keyboard="Numeric"
            TextChanged="Reset_Result" />

        <Label HorizontalTextAlignment="Center" Text="Podaj N" />
        <Entry
            x:Name="n"
            Keyboard="Numeric"
            TextChanged="Reset_Result" />

        <Label HorizontalTextAlignment="Center" Text="Podaj Sn" />
        <Entry
            x:Name="Sn"
            Keyboard="Numeric"
            TextChanged="Reset_Result" />

        <Button Clicked="Calculate_Clicked" Text="Oblicz" />
        <Label
            x:Name="result"
            FontSize="Medium"
            HorizontalTextAlignment="Center" />
    </VerticalStackLayout>
</ContentPage>